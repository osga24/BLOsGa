---
const today = new Date();
import '../styles/global.css';
---

<hr class="footer-divider">
<footer class="footer">
	&copy; {today.getFullYear()} OsGa. All rights reserved.<br/>
</footer>

<style>
	.footer-divider {
		border: none;
		height: 1px;
		background: linear-gradient(to right, transparent, rgba(var(--border), 0.2), transparent);
		margin: 3rem 0 0 0;
	}

	.footer {
		padding: 2rem 1rem 4rem 1rem;
		color: rgba(var(--text-muted), 0.6);
		text-align: center;
		font-size: 0.85rem;
		font-weight: 400;
		border-top: 1px solid rgba(var(--border), 0.08);
		margin-top: 2rem;
	}

	.footer:hover {
		color: rgba(var(--text-muted), 0.8);
		transition: color 0.3s ease;
	}
</style>
