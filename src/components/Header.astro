---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="header">
	<nav class="nav">
		<div class="brand">
			<a href="/" class="brand-link">{SITE_TITLE}</a>
		</div>
		
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/categories">Floder</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		
		<div class="social-links">
			<a href="https://github.com/osga24/blosga" target="_blank" class="social-link" aria-label="GitHub Repository">
				<svg viewBox="0 0 16 16" width="20" height="20">
					<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
				</svg>
			</a>
				<a href="https://osga.dev" target="_blank" class="social-link" aria-label="Personal Website">
				<svg viewBox="0 0 16 16" width="20" height="20">
				<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zM6.5 4.5c0-.28.22-.5.5-.5s.5.22.5.5-.22.5-.5.5-.5-.22-.5-.5zm3 0c0-.28.22-.5.5-.5s.5.22.5.5-.22.5-.5.5-.5-.22-.5-.5zM8 13c-2.76 0-5-2.24-5-5 0-.55.45-1 1-1s1 .45 1 1c0 1.65 1.35 3 3 3s3-1.35 3-3c0-.55.45-1 1-1s1 .45 1 1c0 2.76-2.24 5-5 5z"/>
			</a>
		</div>
	</nav>
</header>

<style>
	.header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(var(--gray-dark), 0.95);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(var(--border), 0.1);
		padding: 0;
		margin: 0;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
		gap: 2rem;
	}

	.brand {
		flex-shrink: 0;
	}

	.brand-link {
		font-size: 1.25rem;
		font-weight: 700;
		color: rgb(var(--black));
		text-decoration: none;
		transition: all 0.3s ease;
		position: relative;
	}

	.brand-link:hover {
		color: var(--accent);
		transform: translateY(-1px);
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex: 1;
		justify-content: center;
	}

	.nav-links :global(a) {
		padding: 0.75rem 1rem;
		color: rgb(var(--gray));
		text-decoration: none;
		border-radius: 8px;
		font-weight: 500;
		font-size: 0.9rem;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-links :global(a:hover) {
		color: rgb(var(--black));
		background: rgba(var(--bg-hover), 0.4);
		transform: translateY(-1px);
	}

	.nav-links :global(a.active) {
		color: var(--accent);
		background: rgba(var(--accent), 0.1);
		font-weight: 600;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		flex-shrink: 0;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		color: rgb(var(--gray));
		text-decoration: none;
		border-radius: 10px;
		transition: all 0.3s ease;
		background: rgba(var(--bg-card), 0.3);
		border: 1px solid rgba(var(--border), 0.1);
	}

	.social-link:hover {
		color: var(--accent);
		background: rgba(var(--bg-hover), 0.6);
		border-color: rgba(var(--accent), 0.3);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(var(--accent), 0.2);
	}

	.social-link svg {
		transition: transform 0.3s ease;
	}

	.social-link:hover svg {
		transform: scale(1.1);
	}

	/* 響應式設計 */
	@media (max-width: 768px) {
		.nav {
			padding: 1rem;
			gap: 1rem;
		}

		.nav-links {
			gap: 0.25rem;
		}

		.nav-links :global(a) {
			padding: 0.5rem 0.75rem;
			font-size: 0.85rem;
		}

		.social-links {
			gap: 0.5rem;
		}

		.social-link {
			width: 36px;
			height: 36px;
		}
	}

	@media (max-width: 580px) {
		.nav {
			flex-wrap: wrap;
			justify-content: center;
		}

		.brand {
			order: 1;
			flex: 1;
		}

		.social-links {
			order: 2;
		}

		.nav-links {
			order: 3;
			width: 100%;
			justify-content: center;
			margin-top: 0.5rem;
		}
	}

	/* 隱藏 screen reader 文字 */
	.sr-only {
		position: absolute !important;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}
</style>
